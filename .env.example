DATABASE_URL="postgresql://user:password@host:port/database"

# ===========================================
# CONFIGURAÇÕES DE SEGURANÇA - JWT
# ===========================================
JWT_SECRET="sua-chave-secreta-com-pelo-menos-32-caracteres-aqui"
